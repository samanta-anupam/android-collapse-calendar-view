        <LinearLayout
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/calendar_margin_top"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/custom_border_grey_rounded"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/prev"
                android:layout_width="33dp"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:src="@drawable/ic_chevron_left_white"/>

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/white"/>

            <TextView
                android:id="@+id/title"
                style="@style/TextStyle.Body"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:textColor="@color/white"/>

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/Grey300"/>

            <ImageButton
                android:id="@+id/next"
                android:layout_width="33dp"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:src="@drawable/ic_chevron_right_white"/>
        </LinearLayout>

        <TextView
            android:id="@+id/selection_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_dark"
            android:gravity="center"
            android:minHeight="48dp"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:visibility="gone"/>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/days"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Blue500"
        android:orientation="horizontal"
        android:paddingBottom="18dp"
        android:paddingLeft="@dimen/margin_normal"
        android:paddingRight="@dimen/margin_normal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/font_extra_small"
            tools:ignore="SmallSp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/font_extra_small"
            tools:ignore="SmallSp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/font_extra_small"
            tools:ignore="SmallSp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/font_extra_small"
            tools:ignore="SmallSp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/font_extra_small"
            tools:ignore="SmallSp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:textSize="@dimen/font_extra_small"
            tools:ignore="SmallSp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:textSize="@dimen/font_extra_small"
            tools:ignore="SmallSp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/weeks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Blue500"
        android:orientation="vertical"
        android:paddingBottom="@dimen/calendar_margin_top"
        android:paddingLeft="@dimen/margin_normal"
        android:paddingRight="@dimen/margin_normal">

        <!-- Cashes them at first start -->
        <include layout="@layout/week_layout"/>

        <include layout="@layout/week_layout"/>

        <include layout="@layout/week_layout"/>

        <include layout="@layout/week_layout"/>

        <include layout="@layout/week_layout"/>

        <include layout="@layout/week_layout"/>

    </LinearLayout>

</merge>